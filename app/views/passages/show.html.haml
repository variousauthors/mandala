%p#notice= notice

%p
  %b Title:
  = @passage.title
%p
  %b Damage:
  = @passage.damage
%p
  %b Population:
  = @passage.population
%p
  %b content:
  %p.passage
    - @passage.phrases.each do |phrase|
      %span{ :style => "opacity: #{ (( phrase.hit_points - @passage.damage ) / phrase.hit_points.to_f ) }" }
        = phrase.content + ' (' + phrase.hit_points.to_s + ')'

= link_to 'Edit', edit_passage_path(@passage)
\|
= link_to 'Back', passages_path
